<UserControl x:Class="GameHelper.UserControls.MeterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <TextBlock x:Name="_tb" Foreground="Yellow" Visibility="Collapsed"/>
        <ItemsControl x:Name="_ic" Foreground="Yellow"/>
        <Button Content="Copy" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="2" Click="OnCopyClick"/>
        <Button Content="Clear" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="2" Click="OnClearClick"/>
    </Grid>
</UserControl>
