<Window x:Class="GameHelper.Windows.ChatHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChatHistoryWindow" Height="450" Width="800">

    <Window.Resources>
        <Style TargetType="ComboBox" BasedOn="{StaticResource DefaultComboBox}"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel>
            <ComboBox x:Name="_cbGame" SelectionChanged="_cbGame_OnSelectionChanged"/>
            <ComboBox x:Name="_cbChannel"/>
        </StackPanel>
    </Grid>
</Window>
